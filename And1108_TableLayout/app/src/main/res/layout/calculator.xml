<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>
            <EditText
                android:id="@+id/etNum1"
                android:hint="숫자1 입력"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_span="5"
                android:inputType="number"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/etNum2"
                android:hint="숫자2 입력"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_span="5"
                android:inputType="number"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="0"
                android:textSize="20sp"
                android:id="@+id/btn0"
                android:layout_weight="1"/>

            <Button
                android:text="1"
                android:textSize="20sp"
                android:id="@+id/btn1"
                android:layout_weight="1"/>

            <Button
                android:text="2"
                android:textSize="20sp"
                android:id="@+id/btn2"
                android:layout_weight="1"/>

            <Button
                android:text="3"
                android:textSize="20sp"
                android:id="@+id/btn3"
                android:layout_weight="1"/>

            <Button
                android:text="4"
                android:textSize="20sp"
                android:id="@+id/btn4"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow>
            <Button
                android:text="5"
                android:textSize="20sp"
                android:id="@+id/btn5"
                android:layout_weight="1"/>

            <Button
                android:text="6"
                android:textSize="20sp"
                android:id="@+id/btn6"
                android:layout_weight="1"/>

            <Button
                android:text="7"
                android:textSize="20sp"
                android:id="@+id/btn7"
                android:layout_weight="1"/>

            <Button
                android:text="8"
                android:textSize="20sp"
                android:id="@+id/btn8"
                android:layout_weight="1"/>

            <Button
                android:text="9"
                android:textSize="20sp"
                android:id="@+id/btn9"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="더하기"
                android:textSize="20sp"
                android:layout_span="5"
                android:layout_weight="1"
                android:id="@+id/btnAdd"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="빼기"
                android:textSize="20sp"
                android:layout_span="5"
                android:layout_weight="1"
                android:id="@+id/btnSub"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="곱하기"
                android:textSize="20sp"
                android:layout_span="5"
                android:layout_weight="1"
                android:id="@+id/btnMul"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="나누기"
                android:textSize="20sp"
                android:layout_span="5"
                android:layout_weight="1"
                android:id="@+id/btnDiv"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="계산결과 : "
                android:textSize="30sp"
                android:textColor="#FF0000"
                android:layout_span="5"
                android:layout_weight="1"
                android:id="@+id/tvResult"/>
        </TableRow>


    </TableLayout>

</LinearLayout>